<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.jboss.blacktie.plugins</groupId>
	<artifactId>cpp-plugin</artifactId>
	<version>1.0-M4</version>
	<name>Blacktie C++ Plugin</name>
	<packaging>maven-plugin</packaging>
	<url>http://www.jboss.org/blacktie/</url>
	<scm>
		<connection>scm:svn:http://anonsvn.jboss.org/repos/blacktie/trunk/blacktie</connection>
		<developerConnection>scm:svn:https://svn.jboss.org/repos/blacktie/trunk/blacktie</developerConnection>
		<url>http://viewvc.jboss.org/cgi-bin/viewvc.cgi/blacktie/trunk/blacktie</url>
	</scm>

	<dependencies>
		<dependency>
			<groupId>org.apache.maven</groupId>
			<artifactId>maven-script-ant</artifactId>
			<version>2.1.0-M1</version>
		</dependency>
		<dependency>
			<groupId>org.apache.maven</groupId>
			<artifactId>maven-project</artifactId>
			<version>2.0</version>
		</dependency>
		<dependency>
			<groupId>org.apache.ant</groupId>
			<artifactId>ant</artifactId>
			<version>1.7.0</version>
		</dependency> 
		<dependency>
			<groupId>ant-contrib</groupId>
			<artifactId>cpptasks</artifactId>
			<version>1.0b5</version>
		</dependency>
		<dependency>
			<groupId>ant-contrib</groupId>
			<artifactId>ant-contrib</artifactId>
			<version>1.0b2</version>
		</dependency>

	</dependencies>
	
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-plugin-plugin</artifactId>
				<version>2.2</version>

				<!-- Add the Ant plugin tools -->
				<dependencies>
					<dependency>
						<groupId>org.apache.maven</groupId>
						<artifactId>maven-plugin-tools-ant</artifactId>
						<version>2.1</version>
					</dependency>
				</dependencies>

				<configuration>
					<goalPrefix>cpp</goalPrefix>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
					<executions>
						<execution>
							<id>jar-resources</id>
							<phase>package</phase>
							<goals>
								<goal>run</goal>
							</goals>
							<configuration>
								<tasks>
								       <!--
								            TODO figure out why this doesn't work
								       basedir="${project.build.resources.resource.directory}"
								            -->
								<jar destfile="${project.build.sourceDirectory}/../resources/cxx.jar"
								       basedir="${project.build.sourceDirectory}/../resources"
								       excludes="**/*.jar"
								                />
								</tasks>
							</configuration>
						</execution>
					</executions>
			</plugin>
		</plugins>
	</build>
</project>

